\mode<presentation>

\definecolor{itmoblue}{RGB}{2,48,172}
\definecolor{itmored}{RGB}{236,11,67}

\setbeamercolor{normal text}{fg=itmoblue,bg=white}
\setbeamercolor{alerted text}{fg=itmored}

\setbeamercolor{structure}{parent=normal text}

\setbeamercolor{palette primary}{use=structure,bg=itmoblue,fg=white}


% If we don't set all of it, then the values of `bars` are preserved even in
% `darkbars` newenvironments
\setbeamercolor{math text}{parent=normal text}
\setbeamercolor{normal text in math text}{parent=normal text}
\setbeamercolor{author}{parent=normal text}
\setbeamercolor{institute}{parent=normal text}
\setbeamercolor{date}{parent=normal text}
\setbeamercolor{titlegraphic}{parent=normal text}
\setbeamercolor{part name}{parent=normal text}
\setbeamercolor{section name}{parent=normal text}
\setbeamercolor{subsection name}{parent=normal text}
\setbeamercolor{subsection in toc}{parent=normal text}
\setbeamercolor{headline}{parent=normal text}
\setbeamercolor{footline}{parent=normal text}
\setbeamercolor{sidebar}{parent=normal text}
\setbeamercolor{caption}{parent=normal text}
\setbeamercolor{block body}{parent=normal text}
\setbeamercolor{block body alerted}{parent=normal text}
\setbeamercolor{block body example}{parent=normal text}
\setbeamercolor{itemize/enumerate body}{parent=normal text}
\setbeamercolor{itemize/enumerate subbody}{parent=normal text}
\setbeamercolor{itemize/enumerate subsubbody}{parent=normal text}
\setbeamercolor{separation line}{parent=normal text}
\setbeamercolor{abstract}{parent=normal text}
\setbeamercolor{verse}{parent=normal text}
\setbeamercolor{quotation}{parent=normal text}

\mode
<all>
